{
    "mcpServers": {
        "language-server": {
            "command": "${HOME}/go/bin/mcp-language-server",
            "args": ["--workspace", ".", "--lsp", "bunx", "--", "--bun", "typescript-language-server@latest", "--stdio"]
        },
        "eslint": {
            "command": "bunx",
            "args": ["--bun", "@eslint/mcp@latest"]
        },
        "tmux": {
            "command": "bunx",
            "args": ["--bun", "@hughescr/tmux-mcp-server@latest"]
        }
    }
}
